{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true
  },
  "include": [
    "server.ts",
    "./controllers/**/*",
    "./models/**/*",
    "./routes/**/*",
    "./db/**/*",
    "./helpers/**/*",
    "./middlewares/**/*"
  ]
}
